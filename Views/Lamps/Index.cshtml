@model Illumination.Models.LampSizeViewModel

@{
    ViewData["Lamptype"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Lamps" asp-action="Index" method="get">
    <p>

        <select asp-for="LampSize" asp-items="Model.Sizes">
            <option value="">All</option>
        </select>
        LampType: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lamps![0].LampType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lamps![0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lamps![0].Design)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lamps![0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lamps![0].Powersource)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Lamps!)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LampType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Design)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Powersource)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
